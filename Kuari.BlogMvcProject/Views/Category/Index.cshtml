@model List<CategoryDto>
@{
    Layout = null;
}

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Durumu</th>
            <th>Detaylar</th>
            <th>Sil</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td>@item.Description</td>
            </tr>
        }
        
    </tbody>
</table>